<div class="" id="app">
<div class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Please take a moment to rate our app</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
        <x-star-rating value="3" number="5" id="rating">
        </x-star-rating>
        <label class="label">Service Description</label>
        <div class="control">
            <textarea id="description" class="textarea" placeholder="Textarea"></textarea>
        </div>
    </section>
    <footer class="modal-card-foot">
      <button class="button is-success"><a href="/">Submit</a></button>
      <button class="button"><a href="/services">Cancel</a></button>
    </footer>
  </div>
</div>

